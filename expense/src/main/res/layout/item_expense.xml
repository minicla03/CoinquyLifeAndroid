<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_expense"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    android:backgroundTint="#D1B3FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container"
        android:padding="16dp">

        <!-- Importo -->

        <!-- Descrizione -->

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100â‚¬"
            android:textColor="#8A2BE2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrizione della spesa"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#808080" />

        <!-- Stato -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_da_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da fare"
                android:textSize="12sp"
                android:textColor="#FFA500"
                android:layout_marginEnd="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_saldata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldata"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Nuovo bottone -->
        <Button
            android:id="@+id/btn_mark_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segna come saldata"
            android:background="@drawable/rounded_container"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D1B3FF"
            android:layout_marginTop="8dp"
            android:elevation="2dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
